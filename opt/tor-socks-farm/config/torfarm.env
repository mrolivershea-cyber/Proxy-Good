# Tor-SOCKS Farm Configuration
# Global parameters for the farm deployment

# Number of instances
MIN_INSTANCES=50
MAX_INSTANCES=500

# Port ranges
BASE_SOCKS_PORT=9000      # Local SOCKS ports: 9001, 9002, ...
BASE_CTRL_PORT=9100       # Control ports: 9101, 9102, ...
BASE_DNS_PORT=9200        # DNS ports: 9201, 9202, ...
BASE_TRANS_PORT=9300      # Transparent proxy ports: 9301, 9302, ...
BASE_PUBLIC_PORT=20000    # Public SOCKS ports: 20001, 20002, ...

# Rotation settings
ROTATE_EVERY_MIN=30       # Rotation interval in minutes

# Default country (* = no restriction)
DEFAULT_COUNTRY=*
